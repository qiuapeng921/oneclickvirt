[client]
port = 3306
socket = /var/run/mysqld/mysqld.sock

[mysqld]
# Basic Settings
bind-address = 0.0.0.0
port = 3306
socket = /var/run/mysqld/mysqld.sock
datadir = /var/lib/mysql
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
lc-messages-dir = /usr/share/mysql
lc-messages = en_US

# Character Set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Storage Engine
default_storage_engine = InnoDB

# Authentication (Compatible with MySQL 5.7 and 8.0)
default_authentication_plugin = mysql_native_password
# MySQL 8.0+: Use authentication_policy for backwards compatibility
# authentication_policy = mysql_native_password,mysql_native_password
# Allow empty password for root user (configured in startup script)
# skip-grant-tables is NOT used here for security - password is set to empty in initialization

# Table and Schema
lower_case_table_names = 1
performance_schema_max_table_instances = 400
table_definition_cache = 400
table_open_cache = 32

# SQL Mode (Compatible with MySQL 5.7 and 8.0)
sql-mode = NO_ENGINE_SUBSTITUTION,STRICT_TRANS_TABLES

# Network and Connection
max_connections = 500
max_connect_errors = 100
max_allowed_packet = 100M
skip-external-locking
skip-name-resolve
open_files_limit = 65535

# Thread and Cache
thread_cache_size = 4
tmp_table_size = 8M

# Buffer Sizes (Optimized for Docker)
key_buffer_size = 8M
sort_buffer_size = 256K
net_buffer_length = 4K
read_buffer_size = 128K
read_rnd_buffer_size = 256K
myisam_sort_buffer_size = 4M

# Binary Logging (Disabled for performance)
skip-log-bin
server-id = 1
# Uncomment below to enable binary logging
# log-bin = mysql-bin
# binlog_format = mixed
# expire_logs_days = 3
# max_binlog_size = 512M

# Slow Query Log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 3
# log_queries_not_using_indexes = on

# InnoDB Settings (Optimized for Docker)
innodb_data_home_dir = /var/lib/mysql
innodb_data_file_path = ibdata1:10M:autoextend
innodb_log_group_home_dir = /var/lib/mysql
innodb_buffer_pool_size = 128M
# MySQL 5.7 uses innodb_log_file_size
innodb_log_file_size = 64M
# MySQL 8.0+ uses innodb_redo_log_capacity (commented for compatibility)
# innodb_redo_log_capacity = 67108864
innodb_log_buffer_size = 8M
innodb_flush_log_at_trx_commit = 1
innodb_lock_wait_timeout = 50
innodb_max_dirty_pages_pct = 90
innodb_read_io_threads = 1
innodb_write_io_threads = 1
innodb_force_recovery = 0

# Security
secure-file-priv = ""

# Timestamp behavior
explicit_defaults_for_timestamp = true

[mysqldump]
quick
max_allowed_packet = 500M

[mysql]
no-auto-rehash

[myisamchk]
key_buffer_size = 20M
sort_buffer_size = 20M
read_buffer = 2M
write_buffer = 2M

[mysqlhotcopy]
interactive-timeout
